# optimize PNGs
#docker run --rm -it -v `pwd`/images:/data-volume labynocle/imagif-compressor:latest

# requires installation
#
# brew install webp
for i in images/*.png; do
    [ -f "$i" ] || break
    cwebp -q 75 -quiet "$i" -o "$i.webp"
done

